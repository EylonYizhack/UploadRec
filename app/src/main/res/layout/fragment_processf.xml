<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Processf">


    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeLayout"
        android:layout_below="@+id/toolBar"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:textDirection="rtl"
        android:weightSum="1"
        android:layout_gravity="right|bottom">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/recFreeEditText"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:hint="הזן את שלבי ההכנה באופן חופשי"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="יש להזין פרטי מתכון מפורטים ככל האפשר"
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="#ff0000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="הקפד על שפה נאותה וברורה"
            android:layout_above="@+id/textView2"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="#ff0000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="מומלץ לפשט את התהליך לשלבי הכנה"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:id="@+id/textView4"
            android:gravity="center"
            android:textColor="#ff0000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="אין להעלות תוכן שיווקי במסגרת המתכון"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="#ff0000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="בהצלחה"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="#ff0000"/>


    </RelativeLayout>


</FrameLayout>
